{
  "name": "creasico/project-tourney",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "fakerphp/faker": "^1.23",
    "filament/filament": "^3.2",
    "laravel/framework": "^12.9",
    "laravel/horizon": "^5.31",
    "laravel/tinker": "^2.9",
    "livewire/livewire": "^3.4",
    "maatwebsite/excel": "^3.1",
    "sentry/sentry-laravel": "^4.10"
  },
  "require-dev": {
    "barryvdh/laravel-debugbar": "^3.14",
    "barryvdh/laravel-ide-helper": "^3.5",
    "laravel/pint": "^1.19",
    "laravel/sail": "^1.42",
    "mockery/mockery": "^1.6",
    "pestphp/pest": "^3.7",
    "pestphp/pest-plugin-laravel": "^3.0",
    "pestphp/pest-plugin-livewire": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi",
      "@php artisan filament:upgrade",
      "@php artisan ide-helper:generate",
      "@php artisan ide-helper:models -n"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi",
      "@php artisan migrate --graceful --ansi"
    ],
    "lint": [
      "pint --preset laravel --test --ansi"
    ],
    "lint:fix": [
      "pint --preset laravel --ansi"
    ],
    "test": [
      "@php artisan test --env=testing --ansi"
    ],
    "sail": [
      "docker compose --env-file .env.sail"
    ],
    "sail:up": [
      "docker compose --env-file .env.sail up -d"
    ],
    "sail:down": [
      "docker compose --env-file .env.sail down"
    ],
    "sail:exec": [
      "Composer\\Config::disableProcessTimeout",
      "docker compose --env-file=.env.sail exec app"
    ]
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
